<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/notification_user_rounded"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivStoreGroupImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/beethoven_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tvStoreLayGroupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/a_old_l"
            android:gravity="left"
            android:text="제목"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStoreLayMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="10dp"
            android:text="메인 설명"
            android:textColor="@color/commonDateColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStoreLayInstrument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="악기" />

        <TextView
            android:id="@+id/tvStoreLayGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="장르" />

    </LinearLayout>
</LinearLayout>