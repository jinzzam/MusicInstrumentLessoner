<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="10dp"
    android:background="@drawable/notification_user_rounded">

    <ImageView
        android:id="@+id/ivGroupEduImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/music_place_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGroupLayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left"
                android:text="@string/debug_libre_name" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvGroupLayMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:text="@string/debug_libre_main" />

        <TextView
            android:id="@+id/tvGroupLayMusicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/commonDateColor"
            android:text="@string/debug_libre_sub" />
    </LinearLayout>
</LinearLayout>