<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".myactivity.UserGroupDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainBackGround"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivActUserGroupDetailLeftArrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/left_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvActUserGroupDetailName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/a_old_l"
                android:gravity="center"
                android:text="그룹이름"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <hack.the.wap.musicinstrumentlessoner.mylayout.MySeparatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </hack.the.wap.musicinstrumentlessoner.mylayout.MySeparatorLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="30dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivActUserGroupDetailMusicPlace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/beethoven_round" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tvActUserGroupDetailMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/a_old_l"
                    android:gravity="left"
                    android:text="메인"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvActUserGroupDetailSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/commonDateColor"
                    android:text="서브" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/notification_user_rounded"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvActUserGroupDetailTeacherList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_old_l"
                android:text="@string/tv_teacher"
                android:textSize="14dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llActUserGroupDetailTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/notification_user_rounded"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvActUserGroupDetailUserList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_old_l"
                android:text="@string/tv_user"
                android:textSize="14dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llActUserGroupDetailUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>