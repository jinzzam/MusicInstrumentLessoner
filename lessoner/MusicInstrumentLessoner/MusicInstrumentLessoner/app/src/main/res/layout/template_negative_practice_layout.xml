<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_margin="10dp"
    android:background="@drawable/template_negative_lay_rounded">

    <TextView
        android:id="@+id/tvTemplateNegativePracticeLayCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fontFamily="@font/a_old_l"
        android:gravity="center"
        android:text="@string/debug_template_practice_lay_count1"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvTemplateNegativeLayPercent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/template_practice_lay_add_state"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTemplateNegativePracticeLayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/add" />

        <TextView
            android:id="@+id/tvTemplateNegativePracticeLayView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/template_practice_lay_add"
            android:textColor="@color/positiveGreen" />
    </LinearLayout>

</LinearLayout>