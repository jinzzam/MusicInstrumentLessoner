<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".myactivity.TemplateDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainBackGround"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTemplateDetailLayLeftArrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/left_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTemplateDetailLayName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/a_old_l"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/template_teacher_circle"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTemplateDetailLayTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/choa_round" />
            </LinearLayout>
        </LinearLayout>

        <hack.the.wap.musicinstrumentlessoner.mylayout.MySeparatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </hack.the.wap.musicinstrumentlessoner.mylayout.MySeparatorLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="30dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTemplateDetailLayMusician"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/beethoven_round" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTemplateDetailLayMusicianName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/a_old_l"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvTemplateDetailLayTeacherNameSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivTemplateDetailActGuide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/guide" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTemplateDetailActGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/guide_button"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/llTemplateDetailLayTeacherListen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/notification_user_rounded">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTemplateDetailLayTeacherListen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/listen" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTemplateDetailLayTeacherListen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/musicPersonalColor"
                android:text="@string/teacher_listen_music" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llActTemplateDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

</LinearLayout>